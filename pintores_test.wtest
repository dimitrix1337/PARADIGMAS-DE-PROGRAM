import pintores.*

describe "test pintores" {
	
	test "raul"  {
	
		const resultado = aldo.buscar_presupuesto(raul, 20, pintura)
		assert.equals(700, resultado)
		
	}
	
	test "carlos" {
		
		const resultado = aldo.buscar_presupuesto(carlos, 20, pintura)
